{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node@18",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
